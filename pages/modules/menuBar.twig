{% set homeUri = '/pages/Homepage.php' %}
{% set dashUri = '/pages/Dashboard.php' %}
{% set loginUri = '/pages/Login.php' %}
{% set registerUri = '/pages/Register.php' %}
{% set isHome = str_contains(uri, 'Homepage') %}
{% set isDash = str_contains(uri, 'Dashboard') %}
{% set isLogin = str_contains(uri, 'Login') %}
{% set isRegister = str_contains(uri, 'Register') %}

<nav class="navbar navbar-expand-lg navbar-light bg-light">
	<div class="container-fluid">
		<a class="navbar-brand" href={{ isHome ? "#" : homeUri}}>Menu</a>

		<div class="collapse navbar-collapse" id="navbarSupportedContent">
			<ul class="navbar-nav me-auto mb-2 mb-lg-0">
				<li class="nav-item">
					<a class={{isHome ? "\"nav-link active\"" : "nav-link"}} aria-current="page" href={{ isHome ? "#" : homeUri}}>Home</a>
				</li>
				<li class="nav-item">
					{% if session.user_id %}
						<a class={{isDash ? "\"nav-link active\"" : "nav-link"}} href={{ isDash ? "#" : dashUri}}>Dashboard</a>
					{% endif %}
				</li>
				<li class="nav-item">
					{% if session.user_id %}
						<a class="nav-link" href="/pages/Logout.php">Logout</a>
					{% else %}
						<a class={{isLogin ? "\"nav-link active\"" : "nav-link"}} href={{ isLogin ? "#" : loginUri}}>Login</a>
					{% endif %}
				</li>
				{% if not session.user_id %}
					<li class="nav-item">
						<a class={{isRegister ? "\"nav-link active\"" : "nav-link"}} href={{ isRegister ? "#" : registerUri}}>Register</a>
					</li>
				{% endif %}

			</ul>

			<form class="d-flex">
				{% if session %}
					<span>
						{{session.firstname}}
						{{session.lastname}}
					</span>
				{% endif %}
				<input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
				<button class="btn btn-outline-success" type="submit">Search</button>
			</form>

		</div>
	</div>
</nav>
