{% extends "layout.twig" %}

{% block content %}
	<div class="container">
		<div class="row">
			<div class="col-3"></div>

			<div class="col card bg-light bg-gradient mt-5">

				<div class="card bg-light bg-gradient mt-3 mb-3">

					<div class="card-title">
						<h3 class="text-center text-primary py-2 mb-3 h3">{{ device.poct_device_manufacture_name }}</h3>
						<p class="text-center text-muted">{{ device.poct_device_generic_name }}</p>
					</div>

					<div class="container">
						<div class="row">
							<div class="col">
								<div height="300px" width="300px">{{ device.DeviceImageUrl }}</div>
							</div>
							<div class="col">
								<p>Device Model:
									{{ device.device_model }}</p>
								<p>Device Type:
									{{ device.device_type }}</p>
							</div>
						</div>
						<div class="row">
							<div class="col">
								<p>Device Description:</p>
								<p>{{ device.device_descripition  }}</p>
							</div>
						</div>
						<div class="row">
							<a href={{"/pages/Manufacturer/DeviceUpdate.php?device_id=" ~ device.device_id}} class="btn btn-primary mb-3">Edit</a>
						</div>
					</div>

				</div>

				<div class="card bg-light bg-gradient mt-3 mb-3">

					<div class="card-title">
						<h3 class="text-center text-primary py-2 mb-3 h3">Device Documents</h3>
					</div>

					<div class="container">
						<div class="row">
							<a href={{"/pages/Manufacturer/DocumentAdd.php?device_id=" ~ device.device_id}} class="btn btn-primary">Add Document</a>
						</div>
					</div>

				</div>


			</div>

			<div class="col-3"></div>
		</div>
	</div>
{% endblock %}
