{% extends "layout.twig" %}

{% block content %}

	{% if session.user_id %}
		<div class="container">
			<div class="row">
				<div class="col-3"></div>

				<div class="col card bg-light bg-gradient mt-5">

					<div class="card-title mt-3">
						<h1 class="text-center text-primary py-2 mb-3">Device Register</h1>
					</div>

					<form method="post" accept-charset="UTF-8" id="CreateAdd" onsubmit="DeviceAdd_handleSubmit(event)">
						<input type="hidden" id="user_id" name="user_id" value={{ session.user_id }}>
						<div class="mb-3">
							<label for="manufactureName" class="form-label">Device Manufacture Name</label>
							<input id="manufactureName" type="text" name="manufactureName" class="form-control" required/>
						</div>
						<div class="mb-3">
							<label for="deviceName" class="form-label">Device Generic Name</label>
							<input id="deviceName" type="text" name="deviceName" class="form-control" required/>
						</div>
						<div class="mb-3">
							<label for="deviceModel" class="form-label">Device Model</label>
							<input id="deviceModel" type="text" name="deviceModel" class="form-control" required/>
						</div>
						<div class="mb-3">
							<label for="deviceImgUrl" class="form-label">Device Photo</label>
							<input id="deviceImgUrl" type="text" name="deviceImgUrl" value="placeholder" class="form-control" required/>
						</div>
						<div class="mb-3">
							<label for="deviceType" class="form-label">Device Type</label>
							<input id="deviceType" type="text" name="deviceType" class="form-control" required/>
						</div>
						<div class="mb-3">
							<label for="deviceDescription" class="form-label">Device Description</label>
							<textarea id="deviceDescription" rows="4" cols="50" name="deviceDescription" class="form-control">Aliquam placerat eros et velit volutpat commodo. Nulla eleifend massa enim, ac commodo libero fermentum ac. Donec varius dolor non fringilla condimentum. In porttitor pulvinar lacus dapibus lacinia. Vivamus faucibus lorem sed ante venenatis, non egestas.
							</textarea>
						</div>
						<button type="submit" class="btn btn-success mb-5">Add Device</button>
					</form>

				</div>
				<div class="col-3"></div>
			</div>
		</div>

	{% else %}
		<h1>User not login</h1>
	{% endif %}
{% endblock %}
