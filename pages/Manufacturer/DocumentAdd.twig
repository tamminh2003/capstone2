{% extends "layout.twig" %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-3"></div>

            <div class="col card bg-light bg-gradient mt-5">

                <div class="card-title mt-3">
                    <h1 class="text-center text-primary py-2 mb-3">Upload Document</h1>
                </div>

                <form method="post" accept-charset="UTF-8" id="CreateAdd" onsubmit="DocumentUpload_handleSubmit(event)">
                    <input type="hidden" id="user_id" name="user_id" value={{ session.user_id }}>
                    <input type="hidden" id="device_id" name="device_id" value={{ deviceAdd.device_id }}>
                    <input type="hidden" id="document_type" name="document_type" value={{ deviceAdd.document_type }}>
                    <div class="mb-3">
                        <label for="DocumentNameLabel" class="form-label">Document Name</label>
                        <input id="DocumentNameLabel" type="text" name="DocumentNameLabel" class="form-control" required/>
                    </div>
                    <div class="mb-3">
                        <label for="DocumentContainer" class="form-label">Device Generic Name</label>
                        <input id="DocumentContainer" type="file" name="DocumentContainer" class="form-control" required/>
                    </div>
                    <button type="submit" class="btn btn-success mb-5">Upload</button>
                </form>

            </div>
            <div class="col-3"></div>
        </div>
    </div>
{% endblock %}
